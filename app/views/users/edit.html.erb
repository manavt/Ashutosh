<%= form_for @user do | f | %>
<table class="table table-striped">
  <tr>
    <td><%= f.label :name%></td>
    <td><%= f.text_field :name%></td>
  </tr>
  <tr>
    <td><%= f.label :email%></td>
    <td><%= f.email_field :email%></td>
  </tr>
  <tr>
    <td><%= f.label :mobile%></td>
    <td><%= f.text_field :mobile%></td>
  </tr>
  <tr>
  </tr>
  <tr>
    <td><%= f.submit "Save" %></td>
  </tr>
</table>
<%end%>

